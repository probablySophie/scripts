{
    "type": "Container",
    "id": "RuntimeInfo",
    "items": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Flow Started: @{convertFromUtc(variables('Time Started'), variables('Timezone'), 'h:mm tt')}",
                            "wrap": true,
                            "size": "Small"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Last Updated: @{convertFromUtc(utcNow(), variables('Timezone'), 'h:mm tt')}",
                            "wrap": true,
                            "size": "Small"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Runtime: @{dateDifference(variables('Time Started'), utcNow())}",
                            "wrap": true,
                            "size": "Small"
                        }
                    ]
                }
            ]
        }
    ]
}
