{
    "type": "Container",
    "id": "RuntimeContainer",
    "items": [
        {
            "colorSet": "diverging",
            "data": [
                {
                    "x": "Created",
                    "y": @{variables('DataCard_Progress_Value') }
                },
                {
                    "x": "Required",
                    "y": @{variables('DataCard_Progress_Max') }
                }
            ],
            "type": "Chart.HorizontalBar",
            "displayMode": "AbsoluteNoAxis"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Flow Started: @{convertFromUtc(variables('Time Started'), variables('Timezone'), 'h:mm tt')}",
                            "wrap": true,
                            "size": "Small"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Last Updated: @{convertFromUtc(utcNow(), variables('Timezone'), 'h:mm tt')}",
                            "wrap": true,
                            "size": "Small"
                        }
                    ]
                }
            ]
        }
    ]
}
